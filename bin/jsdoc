export JSDOCDIR=$HOME/src/jsdoc_toolkit-2.4.0

java "-Djsdoc.dir=$JSDOCDIR" "-Djsdoc.template.dir=$JSDOCDIR/templates/jsdoc" -jar $JSDOCDIR/jsrun.jar $JSDOCDIR/app/run.js --directory=./jsdocs $@